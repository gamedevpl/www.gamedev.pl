{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@gamedev/generator-assets/*": ["generator-assets/src/*"],
      "@gamedev/generator-core/*": ["generator-core/src/*"],
      "@gamedev/generator-frontend/*": ["generator-frontend/src/*"]
    }
  },
  "exclude": ["**/node_modules", "**/dist"]
}
